<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".presentation.mvp.activity.NewActivity">

        <ImageView
            android:id="@+id/image_new_preview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_new_image"
            android:background="@android:color/darker_gray"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/button_new_choose"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:focusable="true"
            android:text="@string/button_new_choose" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_all_normal">

            <EditText
                android:id="@+id/edit_new_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_new_description"
                android:inputType="textMultiLine" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</ScrollView>